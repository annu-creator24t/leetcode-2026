<-------------Bruteforce Approach--------->
class Solution {
    public boolean areAlmostEqual(String s1, String s2) {
        if (s1.equals(s2)) {
            return true;
        }
        char[] arr = s1.toCharArray();
        // Try all possible swaps
        for (int i = 0; i < arr.length; i++) {
            for (int j = i + 1; j < arr.length; j++) {

                // swap i and j
                swap(arr, i, j);
                // check after swap
                if (new String(arr).equals(s2)) {
                    return true;
                }
                // swap back (backtracking)
                swap(arr, i, j);
            }
        }
        return false;
    }
    private void swap(char[] arr, int i, int j) {
        char temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }
} 
     //Tc=O(n² × n)  ,Sc= O(n)


<---------------Optimal Approach---------------->

class Solution {
    public boolean areAlmostEqual(String s1, String s2) {

        if (s1.length() != s2.length()) {
            return false;
        }

        int first = -1, second = -1;
        int diffCount = 0;

        for (int i = 0; i < s1.length(); i++) {

            if (s1.charAt(i) != s2.charAt(i)) {

                diffCount++;

                if (diffCount > 2) {
                    return false;
                }

                if (first == -1) {
                    first = i;
                } else {
                    second = i;
                }
            }
        }
        // If no difference → already equal
        if (diffCount == 0) return true;

        // If exactly 2 differences → check swap condition
        if (diffCount == 2) {
            return s1.charAt(first) == s2.charAt(second) &&
                   s1.charAt(second) == s2.charAt(first);
        }

        return false;
    }
}
    // TC=O(n) ,SC=O(1)






